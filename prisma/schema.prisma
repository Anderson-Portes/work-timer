generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  tasks    Task[]
}

model Task {
  id          String    @id @default(uuid())
  description String
  startTime   DateTime
  endTime     DateTime?
  userId      String
  User        User      @relation(fields: [userId], references: [id])
}
